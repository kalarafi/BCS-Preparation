    <activity android:name=".ResultsAdminDetailed"
        android:theme="@style/Theme.Design.NoActionBar"/>
    <activity android:name=".AboutUsActivity"
        android:label="About Us!">
        </activity>
        <activity android:name=".SplashAnimation"
            android:theme="@style/Theme.Design.NoActionBar"/>
        <activity android:name=".Splash_create_quiz"
            android:theme="@style/Theme.Design.NoActionBar"/>
        <activity android:name=".create_quiz_main"
            android:theme="@style/Theme.Design.NoActionBar">
        </activity>
        <activity android:name=".Chat_Handler"
            android:label="Chat"
            android:theme="@style/Theme.Design.NoActionBar">
        </activity>
        <service
            android:name=".MyFirebaseInstanceIDService">
        <intent-filter>
            <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
        </intent-filter>
    </service>
    <service
        android:name=".MyFirebaseMessagingService">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
        </intent-filter>
    </service>
        <service android:name=".NotificationService"/>
    <activity android:name=".GetDetailReport"
        android:label="Detailed Report"
        android:theme="@style/Theme.Design.NoActionBar">

    </activity>


    </application>

